@model SampleMVCProject.Models.RegisterViewModel

@{
   
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <h2 class="register-title">Register</h2>

    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <table class="table-form">
            <tr>
                <td><label asp-for="Name" class="form-label"></label></td>
                <td>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <td><label asp-for="Email" class="form-label"></label></td>
                <td>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <td><label asp-for="Password" class="form-label"></label></td>
                <td>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <td><label asp-for="ConfirmPassword" class="form-label"></label></td>
                <td>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </td>
            </tr>
            <tr></tr>
            <tr>
                <td colspan="2" style="text-align:center;">
                    <button type="submit" class="btn-register">Register</button>
                </td>
            </tr>
        </table>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}